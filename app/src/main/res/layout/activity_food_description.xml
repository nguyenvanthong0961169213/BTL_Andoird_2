<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e6eb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:id="@+id/ImgFoodDescription"
            android:contentDescription="TODO"></ImageView>

        <TextView
            android:id="@+id/txtTenFoodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtGiaBanFoodDescription"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFoodDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"></TextView>

            <Button
                android:id="@+id/btn_themsp_Description"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/btncongtru"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:ignore="TouchTargetSizeCheck"></Button>
        </LinearLayout>

        <Button
            android:id="@+id/btnThoatFoodDescription"
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:background="@drawable/btncongtru"
            android:text="Cancel"

            ></Button>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>