<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e6eb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
       >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:id="@+id/ImgFoodDescription"
            android:contentDescription="TODO"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenFoodDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Đồ Ăn"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtGiaBanFoodDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá Đồ Ăn"
                android:textSize="25dp"
                android:textStyle="italic"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtThanhPhanFoodDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành Phần"
                android:textSize="20dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/btn_themsp_Description"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btncongtru"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnThoatFoodDescription"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/btncongtru"
            android:layout_marginTop="20dp"
            android:text="Back"

            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>